APP="personal_website"

BUILD_HOST="debian.lan"
BUILD_USER="root"
BUILD_AT="/root/personal_website/builds"

PRODUCTION_HOSTS="debian.lan"
PRODUCTION_USER="root"
DELIVER_TO="/root"

post_start_deployed_release() {
  status "Installing NGINX configuration"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile

    cd '$BUILD_AT'
    for filename in nginx/*; do
      [ -e "$filename" ] || continue
      ln -fs $BUILD_AT/$filename /etc/nginx/sites-enabled/$(basename $filename)
    done
  "
}

pre_erlang_clean_compile() {
  status "Installing NPM dependencies"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    npm --prefix ./assets install $SILENCE
  "

  status "Building static files"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    mkdir -p priv/static
    npm --prefix ./assets run deploy $SILENCE
  "

  status "Running phoenix.digest"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phx.digest $SILENCE
  "
}
